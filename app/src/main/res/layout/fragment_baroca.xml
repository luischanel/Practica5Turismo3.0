<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.luisdavila.turismo3.BarocaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            style="@style/Lstyle"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:src="@drawable/hotelbaroca"/>


            <TextView
                style="@style/titulo.grande"
                android:id="@+id/tBaroca"
                android:text="@string/baroca"/>



            <TextView

                android:id="@+id/tinfBaroca"
                style="@style/texto"
                android:text="@string/infbaroca"/>


        </LinearLayout>
    </ScrollView>

</FrameLayout>
