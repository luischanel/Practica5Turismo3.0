<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.luisdavila.turismo3.VinikusFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            style="@style/Lstyle"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:src="@drawable/vinikus"/>



            <TextView
                style="@style/titulo.grande"
                android:id="@+id/tVinikus"
                android:text="@string/vinikus"/>



            <TextView
                style="@style/texto"
                android:id="@+id/tinfVinikus"
                android:text="@string/infvinikus"/>


        </LinearLayout>
    </ScrollView>
</FrameLayout>
